---
import { MapPin, Calendar, Music, Users } from "lucide-astro";
import { Image } from "astro:assets";
import santaMartaImg from "../assets/img/programacion/santa-marta-art.webp";
import palenqueImg from "../assets/img/programacion/palenque-art.webp";

const destinations = [
  {
    id: 1,
    name: "Santa Marta",
    dates: "Enero 10, 11, 15, 16",
    image: santaMartaImg,
    location: "Portal de mis Sueños, Masaya Hostel & Playa",
    highlights: [
      "Día 10: Portal de mis Sueños — Batalla de Picos",
      "Día 11: Afro Pool Party @ Masaya con Mr. Smoke",
      "Día 15: Workshop de Dancehall con Fideles (UK)",
      "Día 16: Cierre con Dr. Jessil, DJ Tang & MC Budu",
      "Entre otras actividades...",
    ],
    badge: "Primera Parada",
  },
  {
    id: 2,
    name: "Palenque",
    dates: "Enero 18, 19, 20",
    image: palenqueImg,
    location: "Kolao House, Plaza Principal & Calles del Pueblo",
    highlights: [
      "Homenaje a Pedro Luis Padilla Salinas 'Pedrito'",
      "Día 18: Llegada y bienvenida en Kolao House",
      "Día 19: Fiestas de San Sebastián — La Mojadera",
      "Día 20: Reinados, boxeo tradicional y despedida",
      "Entre otras actividades...",
    ],
    badge: "Festival Principal",
  },
];
---

<section class="events section" id="afrotour">
  <div class="container">
    <div
      class="events-header text-center animate-fade-in-up"
      style="animation-delay: 0.1s"
    >
      <span class="section-badge">Enero 2026</span>
      <h2 class="section-title">AFRO IN Tour 2026</h2>
      <p class="section-subtitle">
        Turismo creativo desde la ciudad más antigua de Colombia hasta el primer
        pueblo libre de Sur América.
      </p>
    </div>
    <div class="tour-route">
      <div class="route-line"></div>
      <div class="destinations-grid">
        {
          destinations.map((dest, index) => (
            <div class="destination-card">
              <div class="destination-badge">{dest.badge}</div>
              <div class="destination-image">
                <Image
                  src={dest.image}
                  alt={dest.name}
                  class="destination-img"
                  loading="lazy"
                />
                <div class="destination-overlay">
                  <span class="destination-number">{index + 1}</span>
                </div>
              </div>
              <div class="destination-content">
                <div class="destination-header">
                  <h3 class="destination-name">{dest.name}</h3>
                  <div class="destination-meta">
                    <span class="meta-item">
                      <Calendar size={16} />
                      {dest.dates}
                    </span>
                    <span class="meta-item">
                      <MapPin size={16} />
                      {dest.location}
                    </span>
                  </div>
                </div>
                <ul class="destination-highlights">
                  {dest.highlights.map((highlight) => (
                    <li>{highlight}</li>
                  ))}
                </ul>
              </div>
            </div>
          ))
        }
      </div>
    </div>

    <div class="events-cta text-center">
      <a href="/programacion" class="btn btn-primary btn-large">
        Ver Programación Completa
      </a>
    </div>
  </div>
</section>

<style>
  .events {
    background: var(--gradient-dark);
    color: var(--color-white);
    overflow: hidden;
  }

  .section-badge {
    display: inline-block;
    padding: var(--space-xs) var(--space-md);
    background: rgba(227, 28, 37, 0.2);
    border-radius: var(--radius-full);
    font-size: 0.85rem;
    font-weight: 600;
    color: var(--color-primary);
    text-transform: uppercase;
    letter-spacing: 0.05em;
    margin-bottom: var(--space-md);
  }

  .section-title {
    font-size: clamp(2rem, 5vw, 3rem);
    color: var(--color-white);
    margin-bottom: var(--space-md);
  }

  .section-subtitle {
    font-size: 1.2rem;
    color: rgba(255, 255, 255, 0.7);
    max-width: 650px;
    margin: 0 auto var(--space-xl);
  }

  .tour-route {
    position: relative;
    margin-bottom: var(--space-xl);
  }

  .route-line {
    display: none;
  }

  .destinations-grid {
    display: grid;
    grid-template-columns: repeat(2, 1fr);
    gap: var(--space-xl);
  }

  .destination-card {
    background: rgba(255, 255, 255, 0.05);
    border-radius: var(--radius-lg);
    overflow: hidden;
    position: relative;
    transition: all var(--transition-normal);
    border: 1px solid rgba(255, 255, 255, 0.1);
  }

  .destination-card:hover {
    transform: translateY(-8px);
    background: rgba(255, 255, 255, 0.08);
    border-color: var(--color-primary);
  }

  .destination-badge {
    position: absolute;
    top: var(--space-md);
    left: var(--space-md);
    z-index: 10;
    background: var(--color-primary);
    color: white;
    padding: var(--space-xs) var(--space-sm);
    border-radius: var(--radius-full);
    font-size: 0.75rem;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 0.05em;
  }

  .destination-image {
    position: relative;
    aspect-ratio: 16/10;
    overflow: hidden;
  }

  .destination-image .destination-img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform var(--transition-normal);
  }

  .destination-card:hover .destination-image .destination-img {
    transform: scale(1.05);
  }

  .destination-overlay {
    position: absolute;
    bottom: var(--space-md);
    right: var(--space-md);
    width: 48px;
    height: 48px;
    background: var(--color-primary);
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .destination-number {
    font-size: 1.5rem;
    font-weight: 700;
    color: white;
  }

  .destination-content {
    padding: var(--space-lg);
  }

  .destination-header {
    margin-bottom: var(--space-md);
  }

  .destination-name {
    font-size: 1.5rem;
    color: var(--color-white);
    margin-bottom: var(--space-sm);
  }

  .destination-meta {
    display: flex;
    flex-direction: column;
    gap: var(--space-xs);
  }

  .meta-item {
    display: flex;
    align-items: center;
    gap: var(--space-xs);
    font-size: 0.9rem;
    color: rgba(255, 255, 255, 0.7);
  }

  .meta-item :global(svg) {
    color: var(--color-primary);
    flex-shrink: 0;
  }

  .destination-highlights {
    list-style: none;
    padding: 0;
    margin: 0;
    display: flex;
    flex-direction: column;
    gap: var(--space-xs);
  }

  .destination-highlights li {
    font-size: 0.9rem;
    color: rgba(255, 255, 255, 0.8);
    padding-left: var(--space-md);
    position: relative;
  }

  .destination-highlights li::before {
    content: "→";
    position: absolute;
    left: 0;
    color: var(--color-primary);
  }

  .btn-program {
    display: inline-flex;
    align-items: center;
    gap: var(--space-xs);
    margin-top: var(--space-md);
    padding: var(--space-sm) var(--space-md);
    background: transparent;
    border: 1px solid var(--color-primary);
    border-radius: var(--radius-md);
    color: var(--color-primary);
    font-size: 0.9rem;
    font-weight: 500;
    text-decoration: none;
    transition: all var(--transition-normal);
  }

  .btn-program:hover {
    background: var(--color-primary);
    color: white;
  }

  .btn-program :global(svg) {
    flex-shrink: 0;
  }
  .events-cta {
    padding-top: var(--space-lg);
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: var(--space-md);
  }

  .events-cta .btn {
    display: inline-flex;
    align-items: center;
    gap: var(--space-sm);
  }

  .btn-outline {
    background: transparent;
    border: 2px solid rgba(255, 255, 255, 0.5);
    color: var(--color-white);
  }

  .btn-outline:hover {
    background: rgba(255, 255, 255, 0.1);
    border-color: var(--color-white);
  }

  .events-note {
    margin-top: var(--space-md);
    font-size: 0.9rem;
    color: rgba(255, 255, 255, 0.5);
  }

  @media (max-width: 968px) {
    .destinations-grid {
      grid-template-columns: 1fr;
      max-width: 500px;
      margin: 0 auto;
    }
  }

  @media (max-width: 600px) {
    .destination-meta {
      flex-direction: column;
    }

    .destination-content {
      padding: var(--space-md);
    }
  }
</style>
